<Frame>
  <Screen>
    <Text>Join the Waitlist</Text>
    <Input type="email" name="email" placeholder="Enter your email" />
    <Button action="submit">Join</Button>
  </Screen>
  <Screen>
    <Text>Success! Stay tuned for Testnet!</Text>
    <Text>Your referral code: {code}</Text>
    <Text>Your invite link: {referralLink}</Text>
    <Text>Referrals: {referralCount}</Text>
    <Button action="copy" value="{referralLink}">Copy Link</Button>
  </Screen>
</Frame>
